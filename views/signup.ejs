<%- include('meta/meta', {title: "Sign Up" }) %>
    <link rel="stylesheet" href="/static/styles/forms.css">
    <link rel="stylesheet" href="/static/styles/auth.css">

    </head>

    <body>
        <%- include('layouts/header') %>
            <main>
                <form method="POST">
                    <h1>Create New Account</h1>
                    <p>
                        <label for="email">E-Mail</label>
                        <input type="email" name="email" id="email" required />
                    </p>
                    <p>
                        <label for="cEmail">Confirm Mail</label>
                        <input type="email" name="cEmail" id="cEmail" required />
                    </p>
                    <p>
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" required />
                    </p>
                    <hr>
                    <p>
                        <label for="name">Full Name</label>
                        <input type="name" name="name" id="name" required />
                    </p>
                    <p>
                        <label for="street">Street</label>
                        <input type="street" name="street" id="street" required />
                    </p>
                    <p>
                        <label for="postalCode">Postal Code</label>
                        <input type="postalCode" name="postalCode" id="postalCode" required />
                    </p>
                    <p>
                        <label for="city">City</label>
                        <input type="city" name="city" id="city" required />
                    </p>

                    <button class="btn">Create Account</button>

                    <p>
                        <a href="/login">
                            Login instead
                        </a>
                    </p>
                </form>

            </main>
            <%- include('layouts/footer', {title: "Sign Up" }) %>