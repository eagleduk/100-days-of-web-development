<%- include('meta/meta', {title: "Sign Up" }) %>
    <link rel="stylesheet" href="/static/styles/forms.css">
    <link rel="stylesheet" href="/static/styles/auth.css">

    </head>

    <body>
        <%- include('layouts/header') %>
            <main>
                <h1>Create New Account</h1>
                <% if(inputData.message) { %>
                    <section class="alert">
                        <h2>
                            <%= inputData.message %>
                        </h2>
                    </section>
                    <% } %>
                        <form method="POST">
                            <input type="hidden" name="_csrf" id="_csrf" value="<%= locals.csrf %>">
                            <p>
                                <label for="email">E-Mail</label>
                                <input type="email" name="email" id="email" value="<%= inputData?.email %>" required />
                            </p>
                            <p>
                                <label for="cEmail">Confirm Mail</label>
                                <input type="email" name="cEmail" id="cEmail" value="<%= inputData?.cEmail %>"
                                    required />
                            </p>
                            <p>
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password" required />
                            </p>
                            <hr>
                            <p>
                                <label for="name">Full Name</label>
                                <input type="name" name="name" id="name" value="<%= inputData?.name %>" required />
                            </p>
                            <p>
                                <label for="street">Street</label>
                                <input type="street" name="street" id="street" value="<%= inputData?.street %>"
                                    required />
                            </p>
                            <p>
                                <label for="postalCode">Postal Code</label>
                                <input type="postalCode" name="postalCode" id="postalCode"
                                    value="<%= inputData?.postalCode %>" required />
                            </p>
                            <p>
                                <label for="city">City</label>
                                <input type="city" name="city" id="city" value="<%= inputData?.city %>" required />
                            </p>

                            <button class="btn">Create Account</button>

                            <p>
                                <a href="/login">
                                    Login instead
                                </a>
                            </p>
                        </form>

            </main>
            <%- include('layouts/footer', {title: "Sign Up" }) %>